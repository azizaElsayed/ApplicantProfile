@model IEnumerable<Applicant_JOB_APP.Models.ApplicantQualification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Applicant.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertificationSpecific.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertificationType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Applicant.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CertificationSpecific.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CertificationType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <i class="glyphicon glyphicon-edit"></i>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            <i class="glyphicon glyphicon-arrow-down"></i>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            <i class="glyphicon glyphicon-trash"></i>
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
